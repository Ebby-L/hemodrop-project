# =============================================================================
# SHARED CONFIGURATION - Used by both Frontend and Backend
# =============================================================================

# Data Mode Configuration
SIMULATION_MODE=true
HARDWARE_CONNECTED=false

# Backend Server Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000

# Development Settings
DEBUG=true

